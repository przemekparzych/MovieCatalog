<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body style="background-color:aliceblue">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Katalog filmów", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar-header width-400">
                    <form class="navbar-form navbar-brand" role="search" method="post" action="/Movie/Search">
                        <div class="input-group">

                            <input type="text" class="form-control" placeholder="Szukaj..." name="Title">
                            <span class="input-group-btn">
                                <input class="btn btn-default" type="submit" value="GO!" />
                            </span>

                        </div><!-- /input-group -->
                    </form>
                </div><!-- /.col-lg-6 -->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Filmy", "MoviesLIst", "Movie")</li>
                    <li>@Html.ActionLink("Dodaj film", "Create", "Movie")</li> 
                    <li>@Html.ActionLink("Contact", "Index", "Movie")</li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
