<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />


</head>
<body style="background-color:aliceblue">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container"  ng-app="navModule" ng-controller="navController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                        <a class="navbar-brand" href="/" ng-click="setIndex(0)" ng-class="(index==0) ? 'active' : ''">Katalog filmów</a>

                <div class="navbar-header width-400">
                    <form class="navbar-form navbar-brand" role="search" method="post" action="/Movie/Search">
                        <div class="input-group">

                            <input type="text" class="form-control" placeholder="Szukaj..." name="Title">
                            <span class="input-group-btn">
                                <input class="btn btn-default" type="submit" value="GO!" />
                            </span>

                        </div><!-- /input-group -->
                    </form>
                </div><!-- /.col-lg-6 -->
            </div>
            <div class="navbar-collapse collapse">

                <div >
                    <ul class="nav navbar-nav">
                        <li ng-click="setIndex(1)" ng-class="(index==1) ? 'active' : ''">@Html.ActionLink("Filmy", "MoviesLIst", "Movie")</li>
                        <li ng-click="setIndex(2)" ng-class="(index==2) ? 'active' : ''">@Html.ActionLink("Dodaj film", "Create", "Movie")</li>
                        <li ng-click="setIndex(3)" ng-class="(index==3) ? 'active' : ''">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Katalog filmów | Parzych Przemysław</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/navScript.js"></script>
</body>

</html>
