@model MovieCatalogProject.Models.Cast

@{
    ViewBag.Title = "CreateCast";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectListItem[] castTypes = ViewBag.CastType;
}
<h2>CreateCast</h2>



@Html.Action("CastList", @Model.Movie)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Dodaj członków obsady</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <div class="col-md-6">
            Kategoria: @Html.DropDownListFor(m => m.CastType.CastTypeId, castTypes)
        </div>
    </div>
    <div class="form-group">
        Imię: @Html.EditorFor(m=>m.Person.FirstName)
        Nazwisko: @Html.EditorFor(m=>m.Person.LastName)
    </div>
    <input type="submit" value="Create" class="btn btn-default" />
    </div>
    }
    

